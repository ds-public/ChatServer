[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

# Bashスクリプト
[*.bash]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2

# Windows Batch
[*.bat]
end_of_line = crlf
charset = utf-8
indent_style = space
indent_size = 2

# Packages/manifest.json
[Packages/manifest.json]
insert_final_newline = false
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
